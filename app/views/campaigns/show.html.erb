<% content_for(:title) do %>
   Vote
<% end %>

<h1> <strong>Which one do you prefer?</strong> </h1>

</br>
<div class="container">
  <div class="row">
    <div class="col-xs-offset-6 col-sm-offset-4">
      <div class="stack twisted ">
        <%= link_to campaign_votes_path(
          vote: {
            voted_picture_id: @campaign.picture_a_id
          },
          campaign_id: @campaign.id),
          method: :post do %>
          <%= image_tag (Picture.find(@campaign.picture_a_id).file), size: "300x300" %>
        <% end %>
      </div>
    </div>
      <div class="col-xs-offset-6 col-sm-offset-4">
        <div class="stack twisted ">
          <%= link_to campaign_votes_path(
            vote: {
              voted_picture_id: @campaign.picture_b_id,
            },
            campaign_id: @campaign.id),
            method: :post do %>
            <%= image_tag (Picture.find(@campaign.picture_b_id).file), size: "300x300" %>
          <% end %>
        </div>
    </div>
  </div>
</div>
</br>
</br>
</br>
<br/>
You voted <%= current_user.votes.length %> time(s).
<br/>

<% if current_user.votes.length > 4 %>
 <%= link_to 'Done', results_path %>
<% else %>
Only <%= 5 - current_user.votes.length %> votes left !
<div class="progress">
  <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: <%= (current_user.votes.length / 5.0) * 100 %>%">
  </div>
</div>

<% end %>












