        <div class="text-block"  style="padding-bottom:0px;">
          <%= image_tag Picture.find(@campaign.picture_b_id).file, :class => "picture-results" %><br/>
          <h1 style="padding-bottom:0px;"><%= 100*(@campaign.votes.where(voted_picture_id: @campaign.picture_b_id).length)/@campaign.votes.length %>%</h1>
        </div>
      </div>
    </div>
  </div>
</div>


